<h1>Eat-Da-Burger!</h1>

<div class="row">
    <div class="col-md-5">
        <h4>Burger to devour</h4>
        <ul class="list-group">
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="list-group-item">
                <div class="input-group">
                    <p> {{this.burger_name}} </p>
                    <span class="input-group-btn">
                        <form action="/{{this.id}}" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button class="btn btn-default btn-sm" type="submit">Devour!</button>
                        </form>
                    </span>
                </div>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-5">
        <h4>Devoured Burger</h4>
        <div class="panel panel-default">
            <ul class="list-group">
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list-group-item">
                    <p>{{this.burger_name}} </p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <br>
    <div class="row1">
        <div class=" formClass col-md-9">
            <p>Enter the burger you want to eat</p>
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <textarea class="form-control input-md" type="text" name="name" rows="4"> </textarea>
                </div>
                <button class="btn" type="submit">Submit</button>
            </form>
        </div>
    </div>
